{{#if errorMsg}}
  <div class="alert alert-danger">
    {{errorMsg}}
  </div>
{{/if}}
{{view Seanchai.RequiredTextField valueBinding="title" fieldId="title" action="submit" label="Title" size="100" field-size="col-xs-2"}}
{{view Seanchai.TextAreaField valueBinding="description" fieldId="description" label="Description"}}
{{view Seanchai.TextField valueBinding="copyright" fieldId="copyright" action="submit" label="Copyright"}}
{{view Seanchai.SelectField valueBinding="controller.status_id" statusesBinding="statuses" fieldId="status_id" label="Status"}}
<div class="form-group">
  <div class="col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-sm-10">
    <input {{action submit}} type="submit" class="btn btn-primary" value="Save" />
    <input {{action cancel}} type="submit" class="cancel btn" value="Cancel" />
  </div>
</div>
