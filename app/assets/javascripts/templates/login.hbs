<form {{action login content on="submit"}} class="form-horizontal">
  <legend>Login</legend>
    {{#if errorMsg}}
      <div class="alert alert-error">
        {{errorMsg}}
      </div>
    {{/if}}
  <div class="control-group">
    <label class="control-label" for="username">Email</label>
    <div class="controls">
      {{view Em.TextField valueBinding="username" id="username" action="login"}}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="password">Password</label>
    <div class="controls">
      {{view Ember.TextField valueBinding="password" type="password" id="password" action="login"}}
    </div>
  </div>
  <div class="form-actions">
    <input {{action login}} type="submit" class="btn btn-primary" value="Login" />
    <input {{action cancel}} type="submit" class="btn" value="Cancel" />
  </div>
</form>